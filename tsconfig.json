{
    "compilerOptions": {
        "allowUnreachableCode": false,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "outDir": "dist",
        "module": "commonjs",
        "moduleResolution": "node",
        // "noImplicitAny": true,
        // "noUnusedLocals": true,
        // "noUnusedParameters": true,
        "removeComments": false,
        "sourceMap": true,
        "target": "es2015",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "systemjs"
        ],
        "listEmittedFiles": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": false,
    "buildOnSave": false,
    "angularCompilerOptions": {
        "strictMetadataEmit": true,
        "genDir": "dist",
        "basePath": "src"
    }
}